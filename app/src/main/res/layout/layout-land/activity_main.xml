<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.asmahusna.app.MainActivity">
    <LinearLayout
        android:id="@+id/Header"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/MainLogo"
        android:src="@drawable/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
<RelativeLayout
    android:layout_centerHorizontal="true"
    android:id="@+id/Buttons"
    android:layout_marginTop="5dp"
    android:layout_below="@id/Header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/AudioFiles"
        android:layout_centerHorizontal="true"
        android:text="@string/audio_files"
        android:onClick="Playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="5dp"
        android:layout_below="@+id/AudioFiles"
        android:id="@+id/NamesGrid"
        android:onClick="Names"
        android:text="@string/names_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/NamesGrid"
        android:id="@+id/Quiz"
        android:text="@string/quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>

</RelativeLayout>
